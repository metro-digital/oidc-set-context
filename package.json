    "@biomejs/biome": "^1.9.4",
    "@fastify/pre-commit": "^2.2.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.6.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "bugs": {
    "url": "https://github.com/metro-digital/oidc-set-context/issues"
