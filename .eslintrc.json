{
  "env": {
    "browser": false,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "standard",
    "plugin:jest/recommended",
    "plugin:n/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest",
    "n"
  ],
  "ignorePatterns": [
    "dist/",
    "lib/",
    "node_modules/",
    "jest.config.js"
  ],
  "rules": {
    "n/no-missing-import": "off"
  }
}